<Window x:Class="BikeStoreApp.Popups.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikeStoreApp.Popups"
        mc:Ignorable="d"
        Title="Popup" Height="400" Width="600">

    <Grid x:Name="PopupGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ConfirmBtn" Grid.Column="0" Grid.Row="1" Height="50" Margin="20,0,20,0" Content="Confirm" FontSize="18" 
                Click="ConfirmBtn_Click"/>
        <Button x:Name="BackBtn" Grid.Column="1" Grid.Row="1" Height="50" Margin="20,0,20,0" Content="Cancel" FontSize="18" 
                Click="BackBtn_Click"/>
    </Grid>
</Window>
